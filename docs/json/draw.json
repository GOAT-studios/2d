{
    "title": "Draw",
    "intro": "`Draw` is the object that contains all the drawing functions. Its API is an almost complete copy of the HTML5 Canvas API.",
    "main": {
        "name": "Draw",
        "type": "object",
        "description": "`Draw` contains all the drawing functions, provided by a Draw plugin.\n\n> __Note:__ All coordinates are relative to the top left corner of their space. Positions of polygons are the positions of the top left corner of their AABB. For circles and arcs, it is the position of their center.\n\n> __Note:__ Some objects should be drawn within a certain space. Make sure to check Draw.size before you draw something.",
        "children": [
            {
                "name": "size",
                "type": "object",
                "description": "The maximum size the object may occupate.",
                "children": [
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The maximum width."
                    },
                    {
                        "name": "height",
                        "type": "number",
                        "description": "The maximum height."
                    }
                ]
            },
            {
                "name": "lineWidth",
                "type": "number",
                "description": "The width of the stroke.",
                "default": 1
            },
            {
                "name": "strokeStyle",
                "type": "string/color",
                "description": "The color of the stroke.",
                "default": "#000000"
            },
            {
                "name": "fillStyle",
                "type": "string/color",
                "description": "The color of the fill.",
                "default": "#000000"
            },
            {
                "name": "stroke",
                "type": "method",
                "description": "Stroke the last path.",
                "return": "Draw"
            },
            {
                "name": "fill",
                "type": "method",
                "description": "Fill the last path.",
                "return": "Draw"
            },
            {
                "name": "beginPath",
                "type": "method",
                "description": "Begin a new path.",
                "return": "Draw"
            },
            {
                "name": "closePath",
                "type": "method",
                "description": "End the current path.",
                "return": "Draw"
            },





            {
                "name": "moveTo",
                "type": "method",
                "description": "Move the `cursor` to this point.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the point."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the point."
                    }
                ]
            },
            {
                "name": "lineTo",
                "type": "method",
                "description": "Add a line to the current path that goes from the current position of the `cursor` to this point.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the destination point."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the destination point."
                    }
                ]
            },
            {
                "name": "rect",
                "type": "method",
                "description": "Add a rectangle to the current path with given coordinates and dimensions.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the rectangle."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the rectangle."
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The width of the rectangle."
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The width of the rectangle."
                    }
                ]
            },
            {
                "name": "arc",
                "type": "method",
                "description": "Add an arc to the current path with given coordinates and dimensions.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the arc."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the arc."
                    },
                    {
                        "name": "radius",
                        "type": "number",
                        "description": "The radius of the arc."
                    },
                    {
                        "name": "startAngle",
                        "type": "number",
                        "description": "The starting angle, in radians."
                    },
                    {
                        "name": "endAngle",
                        "type": "number",
                        "description": "The ending angle, in radians."
                    },
                    {
                        "name": "counterClockwise",
                        "type": "boolean",
                        "description": "Whether the drawing should be counterclockwise or clockwise. `true` for counterclockwise, `false` for clockwise.",
                        "default": false,
                        "optional": true
                    }
                ]
            },
            {
                "name": "bezierCurveTo",
                "type": "method",
                "description": "Add a Bezier curve to the current path with given coordinates and dimensions.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "cp1x",
                        "type": "number",
                        "description": "The x-coordinate of the first control point."
                    },
                    {
                        "name": "cp1y",
                        "type": "number",
                        "description": "The y-coordinate of the first control point."
                    },
                    {
                        "name": "cp2x",
                        "type": "number",
                        "description": "The x-coordinate of the second control point."
                    },
                    {
                        "name": "cp2y",
                        "type": "number",
                        "description": "The y-coordinate of the second control point."
                    },
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the end point."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the end point."
                    }
                ]
            },
            {
                "name": "quadraticCurveTo",
                "type": "method",
                "description": "Add a quadratic curve to the current path with given coordinates and dimensions.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "cpx",
                        "type": "number",
                        "description": "The x-coordinate of the control point."
                    },
                    {
                        "name": "cpy",
                        "type": "number",
                        "description": "The y-coordinate of the control point."
                    },
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the end point."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the end point."
                    }
                ]
            },







            {
                "name": "fillRect",
                "type": "method",
                "description": "Fill the rectangle with the given coordinates.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the rectangle."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the rectangle."
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The width of the rectangle."
                    },
                    {
                        "name": "height",
                        "type": "number",
                        "description": "The height of the rectangle."
                    }
                ]
            },
            {
                "name": "strokeRect",
                "type": "method",
                "description": "Stroke the rectangle with the given coordinates.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the rectangle."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the rectangle."
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The width of the rectangle."
                    },
                    {
                        "name": "height",
                        "type": "number",
                        "description": "The height of the rectangle."
                    }
                ]
            },
            {
                "name": "fullRect",
                "type": "method",
                "description": "Fill and stroke the rectangle with the given coordinates.",
                "return": "Draw",
                "arguments": [
                    {
                        "name": "x",
                        "type": "number",
                        "description": "The x-coordinate of the rectangle."
                    },
                    {
                        "name": "y",
                        "type": "number",
                        "description": "The y-coordinate of the rectangle."
                    },
                    {
                        "name": "width",
                        "type": "number",
                        "description": "The width of the rectangle."
                    },
                    {
                        "name": "height",
                        "type": "number",
                        "description": "The height of the rectangle."
                    }
                ]
            }
        ]
    }
}